{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "JwtSettings": {
    "SigningKey": "dev-only-secret-key-change-in-production-32chars!"
  },
  "RateLimiting": {
    "Global": { "PermitLimit": 1000, "WindowSeconds": 60, "QueueLimit": 0 },
    "Auth": { "PermitLimit": 1000, "WindowSeconds": 60, "QueueLimit": 0 },
    "PaymentConfirm": { "PermitLimit": 1000, "WindowSeconds": 60, "QueueLimit": 0 }
  }
}
